{#
/**
 * @file
 * Template for the AV Commons User Guide.
 *
 * Available variables:
 * - sections: Array of guide sections with 'title' and 'content'.
 */
#}
<div class="help-page">
  <div class="help-page__header">
    <h1 class="help-page__title">{{ 'AV Commons User Guide'|t }}</h1>
    <p class="help-page__subtitle">{{ 'Everything you need to know to use AV Commons effectively.'|t }}</p>
  </div>

  {# Table of Contents #}
  <nav class="toc">
    <h2 class="toc__title">{{ 'Quick Navigation'|t }}</h2>
    <ul class="toc__list">
      {% for key, section in sections %}
        <li><a href="#{{ key }}">{{ section.title }}</a></li>
      {% endfor %}
      <li><a href="/help/getting-started">{{ 'Getting Started Guide'|t }}</a></li>
      <li><a href="/help/faq">{{ 'FAQ'|t }}</a></li>
    </ul>
  </nav>

  {# Content Sections #}
  {% for key, section in sections %}
    <div id="{{ key }}" class="help-section">
      <div class="help-section__header">
        <h2 class="help-section__title">{{ section.title }}</h2>
      </div>
      <div class="help-section__content">
        {{ section.content|raw }}
      </div>
    </div>
  {% endfor %}

  {# Additional Resources #}
  <div class="card">
    <div class="card__header card__header--primary">
      <h3 class="card__title">{{ 'Need More Help?'|t }}</h3>
    </div>
    <div class="card__body">
      <p>{{ 'Explore our detailed guides for specific features:'|t }}</p>
      <ul>
        <li><a href="/help/dashboard">{{ 'Dashboard Guide'|t }}</a> - {{ 'Understanding your personal workspace'|t }}</li>
        <li><a href="/help/assets">{{ 'Assets Guide'|t }}</a> - {{ 'Creating and managing content'|t }}</li>
        <li><a href="/help/workflow">{{ 'Workflow Guide'|t }}</a> - {{ 'Approval processes and stages'|t }}</li>
        <li><a href="/help/guilds">{{ 'Guilds Guide'|t }}</a> - {{ 'Skill-based groups and mentorship'|t }}</li>
        <li><a href="/help/notifications">{{ 'Notifications Guide'|t }}</a> - {{ 'Managing your preferences'|t }}</li>
      </ul>
      <p>{{ 'Still have questions?'|t }} <a href="/contact">{{ 'Contact us'|t }}</a>.</p>
    </div>
  </div>
</div>

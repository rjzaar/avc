    },
    {
      "label": "Assets Help",
      "url": "http://ddev-avctest-web/help/assets",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Workflow Help",
      "url": "http://ddev-avctest-web/help/workflow",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Guilds Help",
      "url": "http://ddev-avctest-web/help/guilds",

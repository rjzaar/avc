{
  "id": "avctest",
  "viewports": [
    {
      "label": "mobile",
      "width": 375,
      "height": 667
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1280,
      "height": 800
    }
  ],
  "onBeforeScript": "playwright/onBefore.js",
  "onReadyScript": "playwright/onReady.js",
  "scenarios": [
    {
      "label": "Homepage",
      "url": "http://ddev-avctest-web/",
      "delay": 500,
      "misMatchThreshold": 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "About Page",
      "url": "http://ddev-avctest-web/about",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Contact Page",
      "url": "http://ddev-avctest-web/contact",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "User Guide",
      "url": "http://ddev-avctest-web/help/user-guide",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Getting Started",
      "url": "http://ddev-avctest-web/help/getting-started",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "FAQ",
      "url": "http://ddev-avctest-web/help/faq",
      "delay": 500,
      "misMatchThreshold": 0.1
    },
    {
      "label": "Dashboard Help",
      "url": "http://ddev-avctest-web/help/dashboard",
      "delay": 500,

<?php

/**
 * @file
 * AVC Content module - Initial site content for AV Commons.
 *
 * Help content has been migrated to Book pages.
 * See: scripts/migrate_help_to_book.php
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function avc_content_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.avc_content':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides initial site content for AV Commons.') . '</p>';
      $output .= '<p>' . t('Help documentation is now managed as Book pages, allowing content to be edited through the CMS and go through workflow approval.') . '</p>';
      $output .= '<h4>' . t('Help Pages') . '</h4>';
      $output .= '<ul>';
      $output .= '<li><a href="/help">' . t('Help Center') . '</a></li>';
      $output .= '<li><a href="/about">' . t('About AV Commons') . '</a></li>';
      $output .= '<li><a href="/contact">' . t('Contact Us') . '</a></li>';
      $output .= '</ul>';
      return $output;
  }
}

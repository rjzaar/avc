{#
/**
 * @file
 * Template for the About AV Commons page.
 *
 * Available variables:
 * - content: Array with 'intro' and 'mission' text.
 */
#}
<div class="help-page">
  <div class="help-page__header">
    <h1 class="help-page__title">{{ 'About AV Commons'|t }}</h1>
    <p class="help-page__subtitle">{{ content.intro }}</p>
  </div>

  <div class="help-section">
    <div class="help-section__header">
      <h2 class="help-section__title">{{ 'Our Mission'|t }}</h2>
    </div>
    <div class="help-section__content">
      <p>{{ content.mission }}</p>
    </div>
  </div>

  <div class="help-section">
    <div class="help-section__header">
      <h2 class="help-section__title">{{ 'Platform Features'|t }}</h2>
    </div>
    <div class="help-section__content">
      <div class="feature-list">
        <div class="feature-list__item">
          <div class="feature-list__text">
            <strong>{{ 'Collaborative Workflows'|t }}</strong><br>
            {{ 'Work together on documents with structured review and approval processes.'|t }}
          </div>
        </div>
        <div class="feature-list__item">
          <div class="feature-list__text">
            <strong>{{ 'Project Management'|t }}</strong><br>
            {{ 'Organize work into projects with contained documents and resources.'|t }}
          </div>
        </div>
        <div class="feature-list__item">
          <div class="feature-list__text">
            <strong>{{ 'Guild System'|t }}</strong><br>
            {{ 'Skill-based groups with mentorship, endorsements, and progress tracking.'|t }}
          </div>
        </div>
        <div class="feature-list__item">
          <div class="feature-list__text">
            <strong>{{ 'Smart Notifications'|t }}</strong><br>
            {{ 'Stay informed with customizable immediate, daily, or weekly notifications.'|t }}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="help-section">
    <div class="help-section__header">
      <h2 class="help-section__title">{{ 'AV Levels'|t }}</h2>
    </div>
    <div class="help-section__content">
      <p>{{ 'Members are at different stages of their journey:'|t }}</p>
      <table class="role-table">
        <thead>
          <tr>
            <th>{{ 'Level'|t }}</th>
            <th>{{ 'Description'|t }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><strong>{{ 'Disciple'|t }}</strong></td>
            <td>{{ 'Active members fully committed to the community and formation.'|t }}</td>
          </tr>
          <tr>
            <td><strong>{{ 'Aspirant'|t }}</strong></td>
            <td>{{ 'Those who are discerning a deeper commitment and exploring the community.'|t }}</td>
          </tr>
          <tr>
            <td><strong>{{ 'Sojourner'|t }}</strong></td>
            <td>{{ 'Friends, supporters, and those on their own spiritual journey alongside us.'|t }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="help-section">
    <div class="help-section__header">
      <h2 class="help-section__title">{{ 'Contribution License'|t }}</h2>
    </div>
    <div class="help-section__content">
      <div class="info-box info-box--important">
        <div class="info-box__title">{{ 'Public Domain Acknowledgment'|t }}</div>
        <p>{{ 'All contributions to AV Commons are licensed as public domain. By contributing, you acknowledge that your work can be used by AV Commons under any license the leaders choose, without requiring individual attribution.'|t }}</p>
        <p>{{ 'This allows our community to freely share and build upon each other\'s work for the greater good of our mission.'|t }}</p>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card__header card__header--primary">
      <h3 class="card__title">{{ 'Get Started'|t }}</h3>
    </div>
    <div class="card__body">
      <p>{{ 'Ready to begin?'|t }}</p>
      <div class="button-group">
        <a href="/help/getting-started" class="button button--primary">{{ 'Getting Started Guide'|t }}</a>
        <a href="/help/user-guide" class="button button--secondary">{{ 'Full User Guide'|t }}</a>
        <a href="/contact" class="button button--tertiary">{{ 'Contact Us'|t }}</a>
      </div>
    </div>
  </div>
</div>
